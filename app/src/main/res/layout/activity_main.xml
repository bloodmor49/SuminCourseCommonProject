<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/lesson1btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/lesson1"
            android:onClick="lesson1intent"/>

        <Button
            android:id="@+id/lesson2btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="lesson2intent"
            android:text="@string/lesson2" />/>

        <Button
            android:id="@+id/lesson3btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lesson3"
            android:onClick="lesson3intent"
            tools:layout_editor_absoluteX="156dp"
            tools:layout_editor_absoluteY="508dp" />

        <Button
            android:id="@+id/lesson4btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lesson4"
            android:onClick="lesson4intent"
            tools:layout_editor_absoluteX="83dp"
            tools:layout_editor_absoluteY="467dp" />

    </LinearLayout>




</androidx.constraintlayout.widget.ConstraintLayout>