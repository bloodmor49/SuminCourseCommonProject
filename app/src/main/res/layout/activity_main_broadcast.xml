<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".l150_broadcast_receiver.MainActivityBroadcast">

    <Button
        android:id="@+id/buttonReceiver"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="20dp"
        android:text="Button"
        app:layout_constraintBottom_toTopOf="@+id/progressBarReceiver"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ProgressBar
        android:id="@+id/progressBarReceiver"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="0dp"
        android:max="100"
        android:progress="0"
        android:layout_height="10dp"
        android:layout_margin="20dp"
        app:layout_constraintTop_toBottomOf="@+id/buttonReceiver"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>